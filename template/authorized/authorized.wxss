/* 授权页面 */
page{
  background-color: #eaebea;
}

.authorized{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 头像 */
.head-style{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 70rpx auto;
}
/* 线 */
.line{
  height: 2rpx;
  width: 80%;
  background-color: #cccccc;
}

.content{
  margin: 20rpx auto;
  font-size: 32rpx;
  color: #4e4e4e;
  width: 80%;
}

.desc{
  position: relative;
  width: 80%;
}
/* 点 */
.desc .dot{
  display: inline-block;
  width: 5rpx;
  height: 5rpx;
  border-radius: 50%;
  background-color: #9d9d9d;
  position: absolute;
  top: 30rpx;
  left: 0;
}

.info{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #9d9d9d;
}
/* 授权按钮 */
.authorized-btn{
   width: 80%;
   background-color: #FF6802;
   color: white;
   margin-top: 70rpx;
}