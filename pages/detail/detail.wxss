/* pages/detail/detail.wxss */
page{
  height: 100%;
}
.swiper-class, .swiper-class image{
  width: 100%;
  height: 800rpx;
}
.scroll-view{
  height: calc(100% - 100rpx)

}
.goods-info{
  padding: 30rpx;
  background: white;
}

.goods-info view:nth-of-type(2){
  color: gray;
  font-size: 24rpx;
  margin: 10rpx 0rpx;
}
.goods-info view:nth-of-type(3){
  color: #ff6802;
}
.tabs-active-color{
  color: skyblue;
}
/* 透明的button */
.btn-transparent{
  position: fixed;
  bottom: 0;
  left: 0;

  height: 100rpx;
  width: 100%;
  background: transparent;

  z-index: 2;
}