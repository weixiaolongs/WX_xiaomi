.addcart {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;

  /* 定位 */
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 2;
  
  border-top: 2rpx solid #ddd;
}

.left {
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}

.center {
  flex: 2;
  
  background: #ff6802;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}

.right {
  flex: 2;
  
  background: #e95f3a;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}

.cart{
  width: 80rpx;
  height: 80rpx;
}